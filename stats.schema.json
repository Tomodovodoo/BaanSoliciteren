{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Job Stats",
  "type": "object",
  "required": ["PotentialSatisfaction", "NextAction", "Response", "Interviewed", "Hired", "Rejected"],
  "properties": {
    "PotentialSatisfaction": { "type": "number", "minimum": 0, "maximum": 10 },
    "NextAction": { "type": "string" },
    "Response": { "type": "string", "enum": ["Unsent", "Pending", "Received", "Interview Scheduled", "Offer", "Rejected", "Other"] },
    "Interviewed": { "type": "boolean" },
    "Hired": { "type": "boolean" },
    "Rejected": { "type": "boolean" }
  },
  "additionalProperties": false
}
